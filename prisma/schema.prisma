// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Brands {
  id        Int    @id @default(autoincrement())
  brandName String @db.VarChar(50)
  branding  String @db.VarChar(50)

  createdAt DateTime @default(now()) @db.Timestamp(0)
  updatedAt DateTime @default(now()) @updatedAt @db.Timestamp(0)
}

model Categories {
  id           Int    @id @default(autoincrement())
  categoryName String @db.VarChar(20)
  categoryImg  String

  createdAt DateTime @default(now()) @db.Timestamp(0)
  updatedAt DateTime @default(now()) @updatedAt @db.Timestamp(0)
}

// ENUM FOR PRODUCT MODLE RENARKS
enum remark {
  Best
  Good
  Bad
}

model Product {
  id            Int    @id @default(autoincrement())
  title         String @db.VarChar(120)
  short_des     String @db.VarChar(220)
  price         String
  discount      Int    @db.TinyInt
  discountPrice String @db.VarChar(7)
  image         String
  stock         Int    @db.TinyInt
  star          Float
  remarks       remark
}

model Product_Sliders {
  id        Int    @id @default(autoincrement())
  title     String
  short_des String @db.VarChar(220)
  price     String
  image     String

  //product_id

  createdAt DateTime @default(now()) @db.Timestamp(0)
  updatedAt DateTime @default(now()) @updatedAt @db.Timestamp(0)
}

model Product_Details {
  id Int @id @default(autoincrement())

  img1  String
  img2  String
  img3  String
  img4  String
  des   String @db.LongText
  color String @db.MediumText
  size  String @db.VarChar(20)

  createdAt DateTime @default(now()) @db.Timestamp(0)
  updatedAt DateTime @default(now()) @updatedAt @db.Timestamp(0)
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  createdAt DateTime @default(now()) @db.Timestamp(0)
  updatedAt DateTime @default(now()) @updatedAt @db.Timestamp(0)
}

model Customer_Profiles {
  id            Int    @id @default(autoincrement())
  cus_name      String @db.VarChar(20)
  cus_add       String @db.VarChar(100)
  cus_city      String @db.VarChar(50)
  cus_state     String @db.VarChar(50)
  cus_postcode  String @db.VarChar(50)
  cus_country   String @db.VarChar(60)
  cus_phone     String
  cus_fax       String
  ship_name     String
  ship_add      String
  ship_city     String
  ship_state    String
  ship_postcode String
  ship_country  String
  ship_phone    String

  createdAt DateTime @default(now()) @db.Timestamp(0)
  updatedAt DateTime @default(now()) @updatedAt @db.Timestamp(0)
}
